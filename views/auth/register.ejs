<%- include ('../partials/header')%>
<div class="container content" style="opacity: 90%; font-size: larger;">
    <div class="form card" style="width: 40%; margin: 20px auto; padding: 30px 30px; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">
        <p style="font-size: 60px; margin: auto; font-weight:normal;">Join us today!</p>
        <br>
        <form action="/register" method="post">
            <div style="width: 60%; margin:auto; margin-bottom: 15px;">
                <label for="username" class="form-label"> Enter your username</label>
                <input type="text" placeholder="Example" name="username" class="form-control">
            </div>
            <div style="width: 60%; margin: 5px auto">
                <label for="password" class="form-label"> Enter password</label>
                <input type="password" placeholder="Password" name="password" class="form-control">
            </div>
            <div>
                <button class="btn btn-success" style="display: block; width: 60%; margin: 15px auto;">Register</button>
            </div>
        </form>
            <div>
                <h5 style="display: inline; width: 35%; margin-right: 10px;">Already have an account?</h5>
                <a href="/login" class="btn btn-info">Login</a>
            </div>
    </div>
</div>
    
    <%- include ('../partials/footer')%>